{% extends 'base.html.twig' %}

 {% block stylesheets %}
 {% endblock %}
{% block body %}
    <div class="wrapper">
        <div class="header clearfix">
            <div class="left"><a href="/"><div id="logo">CONSSO.FR</div></a></div>
            <div class="right">
                <ul id="navigation" class="clearfix">
                    {% if client is defined %}<a href="/logout"><li>Se déconnecter</li></a>{% endif %}
                    <a href=""><li>A propos</li></a>
                    <a href=""><li>Références</li></a>
                    <a href=""><li>Objectifs</li></a>
                    <a href=""><li>Contact</li></a>
                </ul>
            </div>
        </div>
        <div class="content clearfix">
                <div class="window">
                    <div class="row">
                        <div class="col s4">
                            <h5>Les catégories</h5>
                            <div class="collection">
                                {% for category in categories %}
                                    {% if category and index == category %}
                                            <a class="collection-item active" href="/les-bons-gestes/{{ category }}">{{ category }}</a>
                                    {% elseif category%}
                                            <a class="collection-item" href="/les-bons-gestes/{{ category }}">{{ category }}</a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col s8">
                            <h5>Les conseils {% if index %}-- {{ index }}{% endif %} </h5>
                            <ul class="collection">
                            {% for tip in tips %}
                                <li class="collection-item">{{ tip.description }}</li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts'@AppBundle/Resources/public/js/*' %}<script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}