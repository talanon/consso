{% extends 'base.html.twig' %}

 {% block stylesheets %}
 {% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="header clearfix">
            <div class="left"><a href="/"><div id="logo">CONSSO.FR</div></a></div>
            <div class="right">
                <ul id="navigation" class="clearfix">
                    {% if client is defined %}<a href="/logout"><li>Se déconnecter</li></a>{% endif %}
                    <a href=""><li>A propos</li></a>
                    <a href=""><li>Références</li></a>
                    <a href=""><li>Objectifs</li></a>
                    <a href=""><li>Contact</li></a>
                </ul>
            </div>

        </div>
        <div class="content clearfix">
            <div class="categories" style="float: left;">
                <h1>Les catégories</h1>
                {% for category in categories %}
                    <a href="/les-bons-gestes/{{ category }}"><div>{{ category }}</div></a>
                {% endfor %}
            </div>
            <div class="window" style="float: right;width: 75%;">
                <div class="tips">
                    <h1>Les conseils</h1>
                {% for tip in tips %}
                    <div class="l2-block" style="width: 100%;margin: 10px;float: left;background: #d7dcd7;padding: 5px;">{{ tip.description }}</div>
                {% endfor %}
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="col3"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts'@AppBundle/Resources/public/js/*' %}<script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}